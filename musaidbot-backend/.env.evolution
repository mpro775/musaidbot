DATABASE_PROVIDER=mongodb

# فعّل MongoDB بدل SQL
DATABASE_ENABLED=true

# ربط الاتصال بقاعدة Mongo (غيّر user:password والعنوان برابطك الفعلي)
DATABASE_CONNECTION_URI=mongodb://admin:strongpassword@mongo:27017/musaidbot?authSource=admin

# بادئة اسم القاعدة (سيصبح evo_evolution_api الخ)
DATABASE_CONNECTION_DB_PREFIX_NAME=evo

# اختيار الحقول التي تريد حفظها في Mongo (false للتجربة فقط)
DATABASE_SAVE_DATA_INSTANCE=false
DATABASE_SAVE_DATA_NEW_MESSAGE=false
DATABASE_SAVE_MESSAGE_UPDATE=false
DATABASE_SAVE_DATA_CONTACTS=false
DATABASE_SAVE_DATA_CHATS=false

# مفتاح المصادقة للإبقاء على الأصل
AUTHENTICATION_API_KEY=change-me
